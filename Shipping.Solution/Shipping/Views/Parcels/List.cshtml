@using Shipping.Models;
@{
  ViewBag.Title = "Shipping Company";
  Layout = "_Layout";
}

@if (Model.Count == 0)
{
  <h2>Sorry, you don't have any parcels!</h2>
}
else
{
  <h1>Here's your list of parcels:</h1>
  <ul>
    @foreach (Parcel item in Model)
    {
      <li>Parcel destination = @item.Destination
        <ul>
          <li>Weight = @item.Weight</li>
          <li>Volume = @item.Volume</li>
          <li>Parcel cost = @item.CostToShip()</li>
        </ul>
      </li>
    }
  </ul>
}