@using Shipping.Models;
@{
  ViewBag.Title = "Shipping Company";
  Layout = "_Layout";
}

<div class="jumbotron">
<h3>Your Parcels</h3>
</div>

@if (Model.Count == 0)
{
  <h2>Sorry, you don't have any parcels yet!</h2>
}
else
{
  <h1 class="p-4">Here's your list of parcels:</h1>

    @foreach (Parcel item in Model)
    {
      <h5 class="p-1">*** Parcel destination: @item.Destination ***</h5>
      <p>Weight: @item.Weight</p>
      <p>Volume: @item.Volume</p>
      <p>Parcel cost: $@item.CostToShip()</p>
    }
}

<p><a href="/parcel/finalOrder">See your final order of parcels</a></p>